mixin staffItem(id="ID 458",add,tel="8 800 658 94 45", email='victorovskiy.victor@mail.ru',name,position="Администратор ресепшн")
	+e.item.LI(class=add)
		+e.item-top
			+e.badge--id= id
			if add
				+e.badge--new Новый
			else
				+e.badge--existing Действующий
			+e.tel(href="tel:")= tel
			+e.mail(href="mailto:")= email
			+e.dropdown-wrap
				+e.btn--js.btn.BUTTON
					+icon('more')
				+e.dropdown.dropdown.visually-hidden.UL
					if add
						+e.dropdown-item.LI
							+e.dropdown-link--confirm(href="#") Подтвердить
						+e.dropdown-item.LI
							+e.dropdown-link(href="#") Отклонить
						+e.dropdown-item.LI
							+e.dropdown-link--remove(href="#") Удалить
					else
						+e.dropdown-item.LI
							+e.dropdown-link--remove(href="#") Уволить
		+e.name= name
		+e.position= position

