mixin formItem(name, notice, date="Октябрь 2023")
	+e.item--form.LI(class=add)
		+e.item-top
			+e.name(href="#")= name
			+e.dropdown-wrap
				+e.btn--js.btn.BUTTON= notice
				+e.dropdown.dropdown.visually-hidden.UL
					+e.dropdown-item.LI
						+e.dropdown-link--confirm(href="#") Сформировать сводный отчет
					+e.dropdown-item.LI
						+e.dropdown-link(href="#") Сводный отчет
		+e.date= date

mixin userFormItem(done,name, date="Октябрь 2023")
	+e.item--userform.LI(class=add)
		+e.item-left
			if done
				+e.badge-sm--done Заполнено
			else
				+e.badge-sm--undone Необходимо заполнить
			+e.date= date
			+e.name(href="#")= name
		if done
			+e.item-right
				+e.download-link(href="#")
					+icon('push-down')
		else
			+e.item-right--fill
				+e.fill-btn.btn.btn-primary Заполнить
