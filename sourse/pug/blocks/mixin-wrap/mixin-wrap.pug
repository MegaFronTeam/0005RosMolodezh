			+filterItem('Региональный проект:','Все','Все1','Все2','Все3')
			+filterItem('Показатели:','Все','Все1','Все2','Все3')
			+filterItem('Плановое значение на конец года:','Выбрано 3','Все1','Все2','Все3')

mixin filterItem(title,btn,...items)
	.col-sm-6.col-md
		+e.item
			+e.title= title
			+e.btn--js.btn.btn-outline-info.BUTTON= btn
			+e.dropdown.dropdown.visually-hidden
				each item in items
					+in-c('checkbox',`${item}`).filter__checkbox


mixin filterItem2(title,btn,...items)
	.col-4
		+e.item
			+e.title= title
			+e.btn--js.btn.btn-outline-info.BUTTON= btn
			+e.dropdown.dropdown.visually-hidden
				each item in items
					+in-c('checkbox',`${item}`).filter__checkbox

mixin displayRow
	+b.display-wrap
		+e.display-row
			+e.block.d-none.d-sm-block
				+select('Отображать по','20','40')
			+pugin()
