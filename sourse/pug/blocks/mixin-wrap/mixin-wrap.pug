mixin addblock()
	+b.addBlock
		+e.btn--minus(type="button")
		input(type="text" value="1"	inputmode='numeric')
		+e.btn--plus(type="button")



mixin search()
	+b.search-block
		form
			input(type="text" placeholder="Поиск" inputmode='search')
			button 
				+icon("search")

mixin page-head(t,...items)
	+b.page-head
		- let l = items.length
		.container
			+breadcrumb('Главная',...items)

			h1= t

mixin parts(elem)
	script.
		addBlock(`#{elem}`)
	div(id=`${elem}Wrap`)

		//- +select('Регион','Все','Все1','Все2','Все3')
mixin filter
	+b.filter
		+e.row.row
			+filterItem('Регион','Все','Все1','Все2','Все3')
			+filterItem('Месяц','Все','Все1','Все2','Все3')
			+filterItem('Сотрудник','Выбрано 3','Все1','Все2','Все3')
			+filterItem('Роль','Все','Все1','Все2','Все3')
mixin filterDashboard
	+b.filter
		+e.row.row
			+filterItem('Возраст:','Все','Все1','Все2','Все3')
			+filterItem('Округ:','Все','Все1','Все2','Все3')
			+filterItem('Регион:','Выбрано 3','Все1','Все2','Все3')
